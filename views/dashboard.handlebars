<section class="new-post-section align-center">
  <h2>Create New Post</h2>

  <form class="new-post-form">
    <div>
      <label for="post-title">Note Title:</label>
      <input type="text" id="post-title" name="post-title" />
    </div>
    <div>
      <label for="post-url">Note Text:</label>
      <input id="" name="post-text" />
    </div>
    <button type="submit" class="btn button medium-expanded">Create</button>
  </form>
</section>

{{#if posts.length}}
<section>
  <h2>Your Posts</h2>
  <div class="post-note">
    <ol class="grid-x">
    {{#each posts as |post|}}
    <li class="cell medium-6 large-4 post">
      {{> post-info post}}
      <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit Task</a>
    </li>
    {{/each}}
    </ol>
  </div>
</section>
{{/if}}

<script src="/javascript/add-post.js"></script>